# ================================
# CONFIGURACIÓN DEL FRONTEND (VITE)
# ================================
# Variables con prefijo VITE_ para acceso desde el navegador

# Configuración de N8N (solo URLs públicas y claves no sensibles)
VITE_N8N_BASE_URL=http://localhost:5678/
VITE_N8N_WEBHOOK_URL=http://localhost:5678/webhook/boe-search

# Configuración del proxy/backend
VITE_PROXY_PORT=3000
VITE_PROXY_BASE_URL=http://localhost:3000

# Configuración de Supabase (solo claves públicas)
VITE_SUPABASE_URL=https://tu-proyecto.supabase.co
VITE_SUPABASE_ANON_KEY=tu_anon_key_de_supabase_aqui

# Configuración de entorno
VITE_ENVIRONMENT=TEST
VITE_APP_DEBUG=true

# Configuración de autenticación (frontend)
VITE_AUTH_ENABLED=true
VITE_AUTH_PROVIDER=supabase
VITE_AUTH_REDIRECT_URL=http://localhost:8000/auth/callback
VITE_AUTH_SESSION_DURATION=86400
VITE_AUTH_REMEMBER_ME_DURATION=2592000

# Tablas de producción (acceso desde frontend)
VITE_SUPABASE_TABLE_GRANTS_PRODUCTION=grants
VITE_SUPABASE_TABLE_RESEARCH_PROJECTS_PRODUCTION=research_projects
VITE_SUPABASE_TABLE_RESEARCH_EXECUTIONS_PRODUCTION=research_executions
VITE_SUPABASE_TABLE_USERS_PRODUCTION=users

# Tablas de prueba (acceso desde frontend)
VITE_SUPABASE_TABLE_GRANTS_TEST=grants_test
VITE_SUPABASE_TABLE_RESEARCH_PROJECTS_TEST=research_projects_test
VITE_SUPABASE_TABLE_RESEARCH_EXECUTIONS_TEST=research_executions_test
VITE_SUPABASE_TABLE_USERS_TEST=users_test

# ================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ================================

# Puerto de la aplicación frontend
APP_PORT=8000

# ================================
# CONFIGURACIÓN DEL BACKEND
# ================================
# Variables sin prefijo VITE_ para uso exclusivo del backend

# Configuración del servidor proxy
PROXY_PORT=3000
CORS_ORIGINS=http://localhost:8000,http://localhost:8001

# Configuración de N8N (backend - incluye claves sensibles)
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook/boe-search
N8N_API_KEY=your_n8n_api_key_here
N8N_BASIC_AUTH_USERNAME=your_n8n_username
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# Configuración de Supabase (backend - incluye service role)
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu_anon_key_de_supabase_aqui
SUPABASE_SERVICE_ROLE_KEY=tu_service_role_key_de_supabase_aqui

# Configuración de autenticación (backend)
AUTH_ENABLED=true
AUTH_PROVIDER=supabase
AUTH_REDIRECT_URL=http://localhost:8000/auth/callback
AUTH_SESSION_DURATION=86400
AUTH_REMEMBER_ME_DURATION=2592000

# Configuración de entorno (backend)
ENVIRONMENT=TEST
SUPABASE_TABLE_NAME=grants_test

# ================================
# APIS EXTERNAS (BACKEND)
# ================================

BOE_API_URL=https://www.boe.es/datosabiertos/api
EUROPA_API_URL=https://ec.europa.eu/info/funding-tenders/opportunities/rest
CDTI_API_URL=https://www.cdti.es/api

# ================================
# CONFIGURACIÓN DE FILTROS
# ================================

DEFAULT_AMOUNT_MIN=0
DEFAULT_AMOUNT_MAX=1000000
DEFAULT_SEARCH_RADIUS_KM=50

# ================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ================================

NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_CHECK_INTERVAL=300000

# ================================
# CONFIGURACIÓN DE IA (BACKEND)
# ================================

AI_EVALUATION_ENABLED=true
AI_MODEL_PROVIDER=openai
AI_MODEL_NAME=gpt-4
AI_API_KEY=tu_api_key_de_openai_aqui