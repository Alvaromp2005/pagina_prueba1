# ================================
# CONFIGURACIÓN DEL FRONTEND PARA PRODUCCIÓN
# ================================
# Variables con prefijo VITE_ para acceso desde el navegador
# IMPORTANTE: Estas variables se inyectan durante el build y quedan "quemadas" en el bundle

# ================================
# CONFIGURACIÓN DEL BACKEND (CRÍTICO)
# ================================
# Esta URL debe apuntar al Application Load Balancer (ALB) de AWS
# Se obtiene como output de Terraform después del despliegue
VITE_PROXY_BASE_URL=https://your-alb-url.amazonaws.com

# ================================
# CONFIGURACIÓN DE SUPABASE (FRONTEND)
# ================================
# Solo URL pública - La clave anónima ahora se maneja en el backend por seguridad
VITE_SUPABASE_URL=https://your-project-id.supabase.co

# ================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ================================
VITE_AUTH_ENABLED=true
VITE_AUTH_PROVIDER=supabase
VITE_AUTH_REDIRECT_URL=https://your-frontend-domain.com/auth/callback
VITE_AUTH_SESSION_DURATION=86400
VITE_AUTH_REMEMBER_ME_DURATION=2592000

# ================================
# CONFIGURACIÓN DE ENTORNO
# ================================
VITE_ENVIRONMENT=PRODUCTION
VITE_APP_DEBUG=false

# ================================
# TABLAS DE SUPABASE (PRODUCCIÓN)
# ================================
VITE_SUPABASE_TABLE_GRANTS_PRODUCTION=grants
VITE_SUPABASE_TABLE_RESEARCH_PROJECTS_PRODUCTION=research_projects
VITE_SUPABASE_TABLE_RESEARCH_EXECUTIONS_PRODUCTION=research_executions
VITE_SUPABASE_TABLE_USERS_PRODUCTION=users

# ================================
# CONFIGURACIÓN DE N8N (SOLO FRONTEND)
# ================================
# IMPORTANTE: Solo configuración no sensible para el frontend
# Todas las credenciales y operaciones se manejan en el backend por seguridad
VITE_N8N_BASE_URL=https://your-n8n-instance.com

# ================================
# CONFIGURACIÓN DE FILTROS
# ================================
VITE_DEFAULT_AMOUNT_MIN=0
VITE_DEFAULT_AMOUNT_MAX=1000000
VITE_DEFAULT_SEARCH_RADIUS_KM=50

# ================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ================================
VITE_NOTIFICATIONS_ENABLED=true
VITE_NOTIFICATIONS_CHECK_INTERVAL=300000

# ================================
# CONFIGURACIÓN DE APIs EXTERNAS (FRONTEND)
# ================================
# URLs públicas de APIs externas (no sensibles)
VITE_BOE_API_URL=https://www.boe.es/datosabiertos/api
VITE_EUROPA_API_URL=https://ec.europa.eu/info/funding-tenders/opportunities/rest
VITE_CDTI_API_URL=https://www.cdti.es/api

# ================================
# CONFIGURACIÓN DE UI
# ================================
VITE_UI_PAGINATION_DEFAULT_PAGE_SIZE=10
VITE_UI_PAGINATION_MAX_PAGE_SIZE=100
VITE_UI_TOAST_DEFAULT_DURATION=5000
VITE_UI_TOAST_ERROR_DURATION=8000
VITE_UI_TOAST_SUCCESS_DURATION=3000

# ================================
# CONFIGURACIÓN DE DESARROLLO (DESHABILITADA EN PRODUCCIÓN)
# ================================
VITE_DEV_ENABLE_LOGS=false
VITE_DEV_ENABLE_DEBUG_PANEL=false
VITE_DEV_MOCK_API_DELAY=0

# ================================
# INSTRUCCIONES DE USO
# ================================
# 1. Copia este archivo a .env.production
# 2. Reemplaza todos los valores placeholder con valores reales
# 3. NUNCA commitees .env.production al repositorio
# 4. Usa este archivo en tu pipeline de CI/CD para el build de producción
# 5. La URL del ALB se puede obtener con: terraform output -raw backend_alb_url
#
# ================================
# VARIABLES REMOVIDAS POR SEGURIDAD
# ================================
# Las siguientes variables se han movido al backend por seguridad:
# - VITE_SUPABASE_ANON_KEY (ahora en backend)
# - VITE_N8N_API_KEY (ahora en backend)
# - VITE_N8N_BASIC_AUTH0_USERNAME (ahora en backend)
# - VITE_N8N_BASIC_AUTH0_PASSWORD (ahora en backend)
# - VITE_N8N_WEBHOOK_URL (ahora en backend)
# - VITE_AI_API_KEY (ahora en backend)
#
# Estas variables ahora se configuran en:
# - Variables de entorno del backend
# - AWS Secrets Manager (para producción)
# - Archivo .env del backend (para desarrollo)